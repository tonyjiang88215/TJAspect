{
  "compilerOptions": {
    //输出目录
    "outDir": "./release",

    "module": "commonjs",

    //编译的目标文件类型
    "target": "es5",

    //允许export时, 不定义export.default
    "allowSyntheticDefaultImports": true,

    //生成.d.ts文件
    "declaration": true,

    //编译js时, 同时生成map文件setup.js
    "sourceMap": true,

    //编译js时, 删除注释
    "removeComments": false,

    //支持decorator
    "experimentalDecorators": true,

    //允许外部引入js
    "allowJs": true,

    //编译时所使用的类库
    "lib": ["es5", "es6"]
  },
  "files": [
    "./src/Aspect.ts"
  ],

  //用于加速编译
  //https://github.com/s-panferov/awesome-typescript-loader
  "awesomeTypescriptLoaderOptions": {
    "library": "es6",
    "useBabel": true,
    "useCache": true
  },

  "exclude": [
    "node_modules"
  ]
}